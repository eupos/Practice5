<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/bordStyle"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" "
            android:textSize="@dimen/fScreen"
            tools:ignore="InvalidId" />

    </LinearLayout>


    <LinearLayout
        style="@style/bordStyle"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/operationField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="  "
            android:textSize="@dimen/fScreen" />

        <EditText
            android:id="@+id/numberField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:ems="10"
            android:inputType="number"
            android:textSize="@dimen/fScreen" />

    </LinearLayout>


    <LinearLayout
        style="@style/bordStyle"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="6"
            android:rowCount="5">

            <Button
                android:id="@+id/btnClear"
                style="@style/butStyle"
                android:layout_row="0"
                android:layout_column="0"
                android:text="C" />

            <Button
                android:id="@+id/btnBspace"
                style="@style/butStyle"
                android:layout_row="0"
                android:layout_column="1"
                android:text="&lt;&lt;" />

            <Button
                android:id="@+id/btnPercent"
                style="@style/butStyle"
                android:layout_row="0"
                android:layout_column="2"
                android:text="%" />

            <Button
                android:id="@+id/btnDiv"
                style="@style/butStyle"
                android:layout_row="0"
                android:layout_column="3"
                android:text="/" />

            <Button
                android:id="@+id/btnSeven"
                style="@style/butStyle"
                android:layout_row="1"
                android:layout_column="0"
                android:text="7" />

            <Button
                android:id="@+id/btnEigh"
                style="@style/butStyle"
                android:layout_row="1"
                android:layout_column="1"
                android:text="8" />

            <Button
                android:id="@+id/btnNine"
                style="@style/butStyle"
                android:layout_row="1"
                android:layout_column="2"
                android:text="9" />

            <Button
                android:id="@+id/btnMulti"
                style="@style/butStyle"
                android:layout_row="1"
                android:layout_column="3"
                android:text="X" />

            <Button
                android:id="@+id/btnFour"
                style="@style/butStyle"
                android:layout_row="2"
                android:layout_column="0"
                android:text="4" />

            <Button
                android:id="@+id/btnFive"
                style="@style/butStyle"
                android:layout_row="2"
                android:layout_column="1"
                android:text="5" />

            <Button
                android:id="@+id/btnSix"
                style="@style/butStyle"
                android:layout_row="2"
                android:layout_column="2"
                android:text="6" />

            <Button
                android:id="@+id/btnSubtrac"
                style="@style/butStyle"
                android:layout_row="2"
                android:layout_column="3"
                android:text="-" />

            <Button
                android:id="@+id/btnOne"
                style="@style/butStyle"
                android:layout_row="3"
                android:layout_column="0"
                android:text="1" />

            <Button
                android:id="@+id/btnTwo"
                style="@style/butStyle"
                android:layout_row="3"
                android:layout_column="1"
                android:text="2" />

            <Button
                android:id="@+id/btnThree"
                style="@style/butStyle"
                android:layout_row="3"
                android:layout_column="2"
                android:text="3" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/butStyle"
                android:layout_row="3"
                android:layout_column="3"
                android:text="+" />

            <Button
                android:id="@+id/btnNull"
                style="@style/butStyle"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:text="0" />

            <Button
                android:id="@+id/btnComma"
                style="@style/butStyle"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text="." />

            <Button
                android:id="@+id/btnResult"
                style="@style/butStyle"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text="=" />

        </GridLayout>

    </LinearLayout>


    <LinearLayout
        style="@style/bordStyle"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000"
        android:orientation="vertical">


        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Светлая"
            android:textOn="Темная" />


    </LinearLayout>

</LinearLayout>